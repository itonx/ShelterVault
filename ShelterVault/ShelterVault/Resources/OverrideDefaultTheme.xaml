<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <!--  Override ShelterVault styles  -->
            <SolidColorBrush x:Key="ShelterVaultForeground" Color="#343a40" />

            <!--  Override Default styles  -->
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#32000000" />
            <Thickness x:Key="NavigationViewContentGridBorderThickness">0</Thickness>
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <!--  Override ShelterVault styles  -->
            <SolidColorBrush x:Key="ShelterVaultForeground" Color="White" />

            <!--  Override Default styles  -->
            <Thickness x:Key="NavigationViewContentGridBorderThickness">0</Thickness>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#32FFFFFF" />
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
