<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ShelterVault.Views.ConfirmMasterKeyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:ShelterVault.Shared.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:desktinyBehaviors="using:Desktiny.WinUI.Behaviors"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:ShelterVault.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer Style="{StaticResource ShelterVault.MasterKey.ScrollViewer}">
        <StackPanel Style="{StaticResource ShelterVault.MasterKey.StackPanel}">
            <TextBlock Style="{ThemeResource ShelterVaultLoginBannerStyle}" />
            <Grid ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ComboBox
                    x:Uid="TitleSelectVault"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Vaults}"
                    SelectedIndex="0"
                    SelectedItem="{Binding SelectedVault, Mode=TwoWay}"
                    Style="{ThemeResource ShelterVaultComboBox}" />
                <Button
                    x:Name="NewVault"
                    x:Uid="NewVaultButton"
                    Grid.Column="1"
                    Command="{Binding NewVaultCommand}"
                    Style="{ThemeResource ShelterVault.MasterKey.Button.Add}">
                    <FontIcon FontSize="25" Glyph="&#xF8AA;" />
                </Button>
            </Grid>
            <Grid ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <PasswordBox
                    x:Name="password"
                    x:Uid="TitleMasterKey"
                    PasswordRevealMode="{Binding ShowPassword, Mode=OneWay, Converter={StaticResource BoolToPasswordVisibility}}"
                    Style="{ThemeResource ShelterVault.MasterKey.PasswordBox}">
                    <interactivity:Interaction.Behaviors>
                        <desktinyBehaviors:FocusBehavior OnEvent="Loaded" />
                        <desktinyBehaviors:KeyDownToCommandBehavior
                            Command="{Binding ConfirmMasterKeyCommand}"
                            CommandParameter="{Binding ElementName=password, Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            VirtualKeyTrigger="Enter" />
                    </interactivity:Interaction.Behaviors>
                </PasswordBox>
                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <Button
                        Width="50"
                        Height="50"
                        Command="{Binding ChangePasswordVisibilityCommand}"
                        IsTabStop="False"
                        Visibility="{Binding ShowPassword, Mode=OneWay, Converter={StaticResource BoolToVisibility}, ConverterParameter=false}">
                        <StackPanel Style="{StaticResource ShelterVault.Credentials.Buttons.StackPanel}">
                            <FontIcon Foreground="{ThemeResource ShelterVaultForeground}" Glyph="&#xF78D;" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="50"
                        Height="50"
                        Command="{Binding ChangePasswordVisibilityCommand}"
                        IsTabStop="False"
                        Visibility="{Binding ShowPassword, Mode=OneWay, Converter={StaticResource BoolToVisibility}, ConverterParameter=true}">
                        <StackPanel Style="{StaticResource ShelterVault.Credentials.Buttons.StackPanel}">
                            <FontIcon Foreground="{ThemeResource ShelterVaultForeground}" Glyph="&#xED1A;" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
